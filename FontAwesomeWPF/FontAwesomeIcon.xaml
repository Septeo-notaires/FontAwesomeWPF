<UserControl x:Class="FontAwesomeWPF.FontAwesomeIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FontAwesomeWPF"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="root"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <FontFamily x:Key="FontAwesomeRegular">pack://application:,,,/DemoControls;component/Fonts/#Font Awesome 6 Free Regular</FontFamily>
        <FontFamily x:Key="FontAwesomeSolid">pack://application:,,,/DemoControls;component/Fonts/#Font Awesome 6 Free Solid</FontFamily>
        <FontFamily x:Key="FontAwesomeBrands">pack://application:,,,/DemoControls;component/Fonts/#Font Awesome 6 Brands Regular</FontFamily>
    </UserControl.Resources>
        <TextBlock DataContext="{Binding ElementName=root}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontFamily="{Binding FontFamily}"
                   FontSize="{Binding IconSize}"
                   Foreground="{Binding IconColor}"
                   Text="{Binding Icon}" />
        
</UserControl>